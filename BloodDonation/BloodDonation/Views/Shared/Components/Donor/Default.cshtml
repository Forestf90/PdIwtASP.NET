@model BloodDonation.PagedLists.DonorPagedList


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayDonor.Pesel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayDonor.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayDonor.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayDonor.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayDonor.BloodType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayDonor.DonationGiven)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetDonors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pesel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.BloodType)" style="max-height:50px ; max-width:50px">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonationGiven) ml 
                    @if (item.Badge != "")
                    {
                        <img src="@Html.DisplayFor(modelItem => item.Badge)" style="max-height:50px ; max-width:50px">
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
