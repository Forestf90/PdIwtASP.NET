@model List<Lab3.Models.RssItem>
@{
    ViewBag.Title = "Home Page";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container">
    <div class="row">
        <div class="col-md-2 col-md-offset-5"><h2>O mnie!</h2></div>
    </div>
    <div class="row" id="Omnie">
        <div class="col-md-8">
            <p>Tutaj jest cos o mnie</p>
            <p>O moich zainteresowaniach</p>
            <p>Moje newsy:<p />
            <ul>
                <li>Google</li>
                <li>Interia koszykówka</li>
                <li>tvn24 - najnowsze</li>
                <li>Interia religia</li>
            </ul>
            <p>Oraz mój adres</p>
        </div>
        <div class="col-md-4"><img src="~/images/fb_avatar.jpg" alt="ava" style="width:100%;"></div>


    </div>

    <div class="row" id="Galeria">
        <div class="container">
            <h2>Moja ukochana galeria</h2>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    <div class="item active">
                        <img src="~/images/1.jpg" alt="zd1" style="width:100%;">
                        <div class="carousel-caption">
                            <h3>Góry 1</h3>
                            <p>Śnieg</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/images/2.jpg" alt="zd2" style="width:100%;">
                        <div class="carousel-caption">
                            <h3>Góry 2</h3>
                            <p>Tu też śnieg</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/images/3.jpg" alt="zd3" style="width:100%;">
                        <div class="carousel-caption">
                            <h3>Góry 3</h3>
                            <p>A tu juz chyba nie</p>
                        </div>
                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>
    <br /><br />
    <div class="row" id="Zainteresowania">
        <div class="container">
            <div class="row">
                <div class="col-md-4"><i class="fa fa-car" style="font-size:36px;"></i><br />Samochody</div>
                <div class="col-md-4"><i class="fa fa-cutlery" style="font-size:24px"></i><br />Jedzenie</div>
                <div class="col-md-4"><i class="fa fa-globe" style="font-size:24px"></i><br />Turystyka</div>
            </div>
            <div class="row">
                <div class="col-md-4"><i class="fa fa-laptop" style="font-size:24px"></i><br />Programowanie w ASP.NET</div>
                <div class="col-md-4"><i class="fa fa-mortar-board" style="font-size:24px"></i><br />Studia</div>
                <div class="col-md-4"><i class="fa fa-music" style="font-size:24px"></i><br />Muzyka</div>
            </div>
        </div>
    </div>
    <div class="row" id="Newsy">
        @foreach (var Item in Model)
        {

            <h3>@Html.Raw(Item.Title)</h3>
            <span>@Html.Raw(Item.pubDate)</span>
            <h3>@Html.Raw(Item.Description)</h3>
        }

    </div>
    <div class="row" id="Mapa">
        @*<div class="map-responsive">*@
        <div class="col-md-2 col-md-offset-5">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d20624.63960726925!2d19.042112622387943!3d49.7469394286807!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47142061955014ad%3A0xc24c24dd7db568bd!2sMeszna!5e0!3m2!1spl!2spl!4v1551980995082" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
            @*width="600" height="450"*@
        </div>
    </div>
</div>

